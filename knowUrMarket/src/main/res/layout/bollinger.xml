<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp" 
    android:paddingBottom="10dp"
    android:background="@drawable/blue">

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbarStyle="insideOverlay" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
             >
            
            <TextView android:textStyle="bold" 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/b1"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:text="Bollinger Bands is a versatile tool combining moving averages and standard deviations and is one of the most popular technical analysis tools available for traders. There are three components to the Bollinger Band indicator:
\n
Moving Average: By default, a 20-period simple moving average is used.\n
Upper Band: The upper band is usually 2 standard deviations (calculated from 20-periods of closing data) above the moving average.\n
Lower Band: The lower band is usually 2 standard deviations below the moving average.
\nBollinger Bands (in blue) are shown below in the chart of the E-mini SnP 500 Futures contract-"/>
            </LinearLayout>
                    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            
            android:paddingTop="10dp"
            android:paddingBottom="10dp" >
            <ImageView 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/iv2"/>
            </LinearLayout>
                    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
             >
             <TextView android:textStyle="bold"
        android:id="@+id/textView1"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="There are three main methodologies for using Bollinger Bands are as follows:" />
             </LinearLayout>
             <Button
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:id="@+id/playing"
                 android:textSize="15dp"
                 android:layout_gravity="center"
                 android:text="Playing the bands"
                 />
             <Button
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:id="@+id/breakout"
                 android:textSize="15dp"
                 android:text="Bollinger Bands Breakout"
                 android:layout_gravity="center"/>
             <Button
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textSize="15dp"
                 android:id="@+id/volatility"
                 android:text="Option Volatility strategy"
                 android:layout_gravity="center"/>
        </LinearLayout>
    </ScrollView>

   

</LinearLayout>
